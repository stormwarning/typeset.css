{
  "name": "typeset.css",
  "description": "A Sass library to help inform good typographic choices, without dictating—as much as possible—your visual design.",
  "license": "ISC",
  "author": "Jeff Nelson <rustyangel@gmail.com> (http://tidaltheory.co)",
  "homepage": "https://stormwarning.github.io/typeset.css/",
  "repository": "stormwarning/typeset.css",
  "bugs": "https://github.com/stormwarning/typeset.css/issues",
  "version": "0.6.1",
  "main": "_typeset.scss",
  "scripts": {
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs"
  },
  "devDependencies": {
    "@zazen/eslint-config": "^0.2.0",
    "@zazen/stylelint-config": "^0.1.1",
    "lint-staged": "^7.0.4",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.2.0",
    "vuepress": "^0.6.0",
    "yorkie": "^1.0.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier-eslint --write",
      "git add"
    ],
    "**/*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "keywords": [
    "baseline",
    "css",
    "opentype",
    "responsive",
    "sass",
    "scss",
    "style",
    "typography"
  ]
}
